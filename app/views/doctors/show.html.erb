<section id="doctor-info">
  <h1><%= @doctor.name %></h1>
  <p>Specialty: <%= @doctor.specialty %></p>
  <p>University: <%= @doctor.university %></p>
  <p>Hospital: <%= @doctor.hospital_name %></p>
</section>
<h3>Patients</h3>
<ul id="patients-list">
  <% @doctor.patients.each do |patient| %>
    <li id="patient-<%= patient.id %>"><%= patient.name %> - <%= button_to 'Remove', doctor_patient_path(doctor_id: @doctor.id, id: patient.id), method: :delete %></li>
  <% end %>
</ul>